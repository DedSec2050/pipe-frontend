<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Health Check - Todo App</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script>
        // Auto-refresh every 5 seconds
        setTimeout(() => location.reload(), 5000);
    </script>
</head>

<body class="bg-light">
    <div class="container py-5">
        <h1 class="text-primary mb-4">
            <i class="fas fa-heartbeat"></i> System Health Check
        </h1>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Frontend Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success fa-2x mr-3"></i>
                            <div>
                                <h6 class="text-success mb-0">Healthy</h6>
                                <small class="text-muted">Frontend is running normally</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Backend Status</h5>
                    </div>
                    <div class="card-body" id="backend-status">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-spinner fa-spin fa-2x mr-3"></i>
                            <div>
                                <h6 class="mb-0">Checking...</h6>
                                <small class="text-muted">Connecting to backend...</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a href="/" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to Todo App
            </a>
            <button onclick="location.reload()" class="btn btn-secondary ml-2">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
        </div>

        <div class="mt-3">
            <small class="text-muted">
                <i class="fas fa-info-circle"></i> Page refreshes automatically every 5 seconds
            </small>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        // Check backend health
        fetch('/api/health')
            .then(response => response.json())
            .then(data => {
                const backendStatus = document.getElementById('backend-status');
                if (data.backend && data.backend.status === 'healthy') {
                    backendStatus.innerHTML = `
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success fa-2x mr-3"></i>
                            <div>
                                <h6 class="text-success mb-0">Healthy</h6>
                                <small class="text-muted">Database: ${data.backend.database_connected ? 'Connected' : 'Disconnected'}</small>
                            </div>
                        </div>
                    `;
                } else {
                    backendStatus.innerHTML = `
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle text-warning fa-2x mr-3"></i>
                            <div>
                                <h6 class="text-warning mb-0">Unavailable</h6>
                                <small class="text-muted">${data.error || 'Backend service is not responding'}</small>
                            </div>
                        </div>
                    `;
                }
            })
            .catch(error => {
                const backendStatus = document.getElementById('backend-status');
                backendStatus.innerHTML = `
                    <div class="d-flex align-items-center">
                        <i class="fas fa-times-circle text-danger fa-2x mr-3"></i>
                        <div>
                            <h6 class="text-danger mb-0">Error</h6>
                            <small class="text-muted">Failed to connect to backend</small>
                        </div>
                    </div>
                `;
            });
    </script>
</body>

</html>